<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F55145">
        <RelativeLayout
            android:id="@+id/r_1"
            android:layout_height="100dp"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="消息"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/kefu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="13dp"
                android:layout_toLeftOf="@+id/jia"
                android:layout_marginRight="10dp"
                android:src="@mipmap/kefu" />

            <ImageView
                android:id="@+id/jia"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/jia" />

            <EditText
                android:id="@+id/tv_xiaoxi"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/tv_1"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@mipmap/sousu"
                android:drawablePadding="10dp"
                android:hint="输入搜索信息"
                android:padding="5dp"
                android:textSize="10sp"
                android:background="@drawable/bt_et2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/r_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
           <ImageView
               android:id="@+id/ig_1"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginLeft="50dp"
               android:layout_marginTop="20dp"
               android:src="@mipmap/wuliu"/>
            <TextView
                android:id="@+id/mtv_1"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ig_1"
                android:layout_marginLeft="40dp"
                android:text="交易物流"
                android:textSize="12sp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/ig_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/notice"/>
            <TextView
                android:id="@+id/mtv_2"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ig_2"
                android:text="通知消息"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/ig_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/message"/>
            <TextView
                android:id="@+id/mtv_3"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ig_3"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:text="互动消息"
                android:textSize="12sp"
                android:gravity="center"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你竟然一条消息都没有"
            android:textSize="30sp"
            />
    </RelativeLayout>


</LinearLayout>